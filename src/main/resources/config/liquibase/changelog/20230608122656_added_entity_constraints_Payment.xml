<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Payment.
    -->
    <changeSet id="20230608122656-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="shareholder_id"
                                 baseTableName="payment"
                                 constraintName="fk_payment__shareholder_id"
                                 referencedColumnNames="id"
                                 referencedTableName="shareholder"/>

        <addForeignKeyConstraint baseColumnNames="dividend_calculation_id"
                                 baseTableName="payment"
                                 constraintName="fk_payment__dividend_calculation_id"
                                 referencedColumnNames="id"
                                 referencedTableName="dividend_calculation"/>

        <addForeignKeyConstraint baseColumnNames="payment_option_id"
                                 baseTableName="payment"
                                 constraintName="fk_payment__payment_option_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_option"/>
    </changeSet>
</databaseChangeLog>
